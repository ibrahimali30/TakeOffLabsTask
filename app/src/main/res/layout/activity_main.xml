<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E5E5E5"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_marginTop="27dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_settings"/>

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#FF2F21"
            android:textStyle="bold"
            android:textSize="32sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="NOW"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btCount"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:backgroundTint="#FE3C72"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="0"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:iconTint="#fff"
            app:layout_constraintEnd_toStartOf="@+id/btCancel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />



    </LinearLayout>

    <link.fls.swipestack.SwipeStack
        android:id="@+id/cardStack"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


    </link.fls.swipestack.SwipeStack>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btSelect"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:backgroundTint="#4CD964"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:icon="@drawable/select"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:iconTint="#fff"
            app:layout_constraintEnd_toStartOf="@+id/btCancel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btCancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:backgroundTint="#FE3C72"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:icon="@drawable/cancel"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:iconTint="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btSelect"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

