<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#346"
                android:src="@drawable/cancel"
                app:layout_constraintBottom_toTopOf="@+id/tvName"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:layout_marginTop="13dp"
                android:id="@+id/tvName"
                android:layout_width="186dp"
                android:layout_height="34dp"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:lineSpacingExtra="0sp"
                android:text="test dfsd "
                android:textAppearance="@style/jessie_21"
                app:layout_constraintBottom_toTopOf="@+id/tvCity" />


            <TextView
                android:id="@+id/tvCity"
                android:layout_width="178dp"
                android:layout_height="34dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="454dp"
                android:text="santa monic"
                android:textAppearance="@style/santa_monic"
                android:lineSpacingExtra="11sp"
                android:gravity="center_vertical"
                android:alpha="0.7"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
